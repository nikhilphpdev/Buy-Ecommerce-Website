$api_key    = "rzp_test_Ujo6k4oqnBGSxS";
$api_secret = "5MEYGJkWnMEOTTrlnkHkMCix";

// Order data
$order_data = [
    "amount"   => $setamount,
    "currency" => "INR",
    "receipt"  => uniqid("rcpt_")
];

// Call Razorpay API
$ch = curl_init("https://api.razorpay.com/v1/orders");
curl_setopt($ch, CURLOPT_USERPWD, $api_key . ":" . $api_secret);
curl_setopt($ch, CURLOPT_POSTFIELDS, json_encode($order_data));
curl_setopt($ch, CURLOPT_HTTPHEADER, ['Content-Type: application/json']);
curl_setopt($ch, CURLOPT_RETURNTRANSFER, true);

$response = curl_exec($ch);
$order = json_decode($response, true);
curl_close($ch);

$order_id = $order['id'];
?>
<!DOCTYPE html>
<html>
<head>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>
<body>
<script>
var options = {
    "key": "<?php echo $api_key; ?>",
    "amount": "<?php echo $setamount; ?>", // in paise
    "currency": "INR",
    "name": "Buyjee",
    "description": "Payment for your order",
    "order_id": "<?php echo $order_id; ?>",
    "handler": function (response){
        // Send payment info to server for verification
        $.post("<?php echo $url; ?>/process.php", {
            razorpay_payment_id: response.razorpay_payment_id,
            razorpay_order_id: response.razorpay_order_id,
            razorpay_signature: response.razorpay_signature
        }, function(res){
            if(res.success){
                window.location.href = "<?php echo $url; ?>/success/";
            } else {
                alert("Payment failed: " + res.message);
                window.location.href = "<?php echo $url; ?>/failed/";
            }
        }, "json");
    },
    "prefill": {
        "name": "<?php echo $_SESSION['customer_fullname']; ?>",
        "email": "<?php echo $_SESSION['customer_email']; ?>",
        "contact": "<?php echo $_SESSION['customer_phone']; ?>"
    },
    "theme": {
        "color": "#ffb91d"
    }
};
var rzp1 = new Razorpay(options);
rzp1.open();
</script>

</body>
</html>
